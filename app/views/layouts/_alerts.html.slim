- if flash[:success].present?
  div.alert.alert-success role='alert' = flash[:success]

- if flash[:warning].present?
  div.alert.alert-warning role='alert' = flash[:warning]

- if flash[:danger].present?
  div.alert.alert-danger role='alert' = flash[:danger]

- if flash[:info].present?
  div.alert.alert-info role='alert' = flash[:info]
